                    <ResourceDictionary>
                        
                            <local:PathDataConverter x:Key="PathDataConverter"/>
                            <local:StrokeBrushConverter x:Key="StrokeBrushConverter"/>
                            
                            <DataTemplate x:Key="columnHeaderTemplate">
                                <Grid Padding="0,5,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="9*" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.5*" />
                                            <ColumnDefinition Width="7.5*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Border Grid.RowSpan="2"
                                                Grid.Column="0"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                Background="{Binding Path=HeaderText , Converter={StaticResource StrokeBrushConverter}, ConverterParameter=PathBackground}"
                                                CornerRadius="25"
                                                Height="30"
                                                Width="30">
                                        <Viewbox Width="20" Height="20" VerticalAlignment="Center">
                                            <Path Data="{ Binding Path=HeaderText , Converter={StaticResource PathDataConverter}}"
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"
                                                  StrokeThickness="0.1"                                        
                                                  Stroke="{Binding HeaderText, Converter={StaticResource StrokeBrushConverter}}"
                                                  Fill="{Binding HeaderText, Converter={StaticResource StrokeBrushConverter}}">
                                            </Path>
                                        </Viewbox>

                                        </Border>

