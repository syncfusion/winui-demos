                                            Grid.RowSpan="3"
                                            Margin="10,0,0,12"
                                            Height="50"
                                            Width="50"
                                            CornerRadius="50">
                                        <Image Source="{Binding Image.Source}" 
                                               Stretch="Fill"/>
