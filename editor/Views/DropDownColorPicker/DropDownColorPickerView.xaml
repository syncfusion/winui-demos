    <Page.DataContext>
        <local:DropDownColorPickerViewModel/>
    </Page.DataContext>
    
    <ScrollViewer>
        <StackPanel x:Name="dropDownColorPickerViewPanel">
            <common:DemoLayout 
                HeaderText="A simple Dropdown Color Picker control."
                XamlSource="{common:ConditionalXAML Individual=Syncfusion.EditorDemos.WinUI/Assets/DDColorPicker/DropDownColorPicker_xaml.txt,
                                                               Common=Editor/Assets/DDColorPicker/DropDownColorPicker_xaml.txt}">
                <common:DemoLayout.Example>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <editors:SfDropDownColorPicker
                            Grid.Row="0"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            SelectedBrush="{Binding SolidBrush, Mode=TwoWay}"/>
                        <editors:SfDropDownColorPicker
                            Grid.Row="1"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            SelectedBrush="{Binding SolidBrush, Mode=TwoWay}">
                            <editors:SfDropDownColorPicker.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <FontIcon 
                                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                                            FontSize="14"
                                            Margin="1"
                                            Glyph="&#xE790;"/>
                                        <Rectangle
                                            Stretch="Fill"
                                            Fill="{Binding}"
                                            Width="24" 
                                            Height="4"
                                            Margin="1"/>
                                    </StackPanel>
                                </DataTemplate>
                            </editors:SfDropDownColorPicker.ContentTemplate>
                        </editors:SfDropDownColorPicker>
                        <Path
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            Height="150"
                            Width="150"
                            Data="{StaticResource shirt}"
                            Stretch="Uniform"
                            Fill="{Binding SolidBrush}"/>
                    </Grid>
                </common:DemoLayout.Example>
            </common:DemoLayout>
            <common:DemoLayout 
                HeaderText="Dropdown Color Picker in split mode."
                XamlSource="{common:ConditionalXAML Individual=Syncfusion.EditorDemos.WinUI/Assets/DDColorPicker/SplitMode_xaml.txt,
                                                               Common=Editor/Assets/DDColorPicker/SplitMode_xaml.txt}">
                <common:DemoLayout.Example>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Text="Font Color"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"/>
                        <editors:SfDropDownColorPicker
                            x:Name="foregroundPicker"
                            Margin="10" 
                            Padding="2"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            SelectedBrush="{Binding ForegroundBrush, Mode=TwoWay}"
                            DropDownMode="Split">
                            <editors:SfDropDownColorPicker.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <FontIcon 
                                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                                            FontSize="14"
                                            Margin="2"
                                            Glyph="&#xE97F;"/>
                                        <Rectangle
                                            Fill="{Binding}"
                                            Stretch="Fill"
                                            Width="24" 
                                            Height="4"
                                            Margin="2"/>
                                    </StackPanel>
                                </DataTemplate>
                            </editors:SfDropDownColorPicker.ContentTemplate>
                        </editors:SfDropDownColorPicker>
                        <TextBlock
                            Grid.Row="1"
                            Text="Text Highlight Color" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"/>
                        <editors:SfDropDownColorPicker
                            x:Name="backgroundPicker"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"
                            Padding="2"
                            HorizontalAlignment="Left"
                            SelectedBrush="{Binding BackgroundBrush, Mode=TwoWay}"
                            DropDownMode="Split">
                            <editors:SfDropDownColorPicker.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <FontIcon 
                                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                                            FontSize="14"
                                            Margin="2"
                                            Glyph="&#xE7E6;"/>
                                        <Rectangle
                                            Fill="{Binding}"
                                            Stretch="Fill"
                                            Width="24" 
                                            Height="4"
                                            Margin="2"/>
                                    </StackPanel>
                                </DataTemplate>
                            </editors:SfDropDownColorPicker.ContentTemplate>
                        </editors:SfDropDownColorPicker>
                        <RichEditBox
                            x:Name="richEditBox"
                            Grid.RowSpan="2"
                            Grid.Column="2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"/>
                    </Grid>
                </common:DemoLayout.Example>
            </common:DemoLayout>
            <common:DemoLayout 
                HeaderText="Dropdown Color Picker with gradient brush type."
                XamlSource="{common:ConditionalXAML Individual=Syncfusion.EditorDemos.WinUI/Assets/DDColorPicker/GradientBrushType_xaml.txt,
                                                               Common=Editor/Assets/DDColorPicker/GradientBrushType_xaml.txt}">
                <common:DemoLayout.Example>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <editors:SfDropDownColorPicker
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            SelectedBrush="{Binding GradientBrush, Mode=TwoWay}">
                            <FlyoutBase.AttachedFlyout>
                                <editors:DropDownFlyout>
                                    <editors:SfColorPicker BorderThickness="0" BrushTypeOptions="Gradient"/>
                                </editors:DropDownFlyout>
                            </FlyoutBase.AttachedFlyout>
                        </editors:SfDropDownColorPicker>
                        <Path
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            Height="150"
                            Width="150"
                            Data="{StaticResource shirt}"
                            Stretch="Uniform"
                            Fill="{Binding GradientBrush}"/>
                    </Grid>
                </common:DemoLayout.Example>
            </common:DemoLayout>
        </StackPanel>
    </ScrollViewer>
</Page>
