<Page
    x:Class="syncfusion.editordemos.winui.Views.SegmentedControl.Customization"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:common="using:syncfusion.demoscommon.winui" 
    xmlns:local="using:syncfusion.editordemos.winui"
    xmlns:syncfusion="using:Syncfusion.UI.Xaml.Editors" xmlns:segmentedcontrol="using:syncfusion.editordemos.winui.Views.SegmentedControl" xmlns:segmentedcontrol1="syncfusion.demoscommon.winui"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <local:SegmentedViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="SelectedBackground" Color="#6C58EA"/>
                    <SolidColorBrush x:Key="ShirtSelectedBackground" Color="White"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="SelectedBackground" Color="#08B2A8"/>
                    <SolidColorBrush x:Key="ShirtSelectedBackground" Color="#08B2A8"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <Style TargetType="syncfusion:SelectedSegmentBorder" x:Key="circleStyle">
                <Setter Property="BorderThickness" Value="2" />
                <Setter Property="BorderBrush" Value="{ThemeResource SystemBaseHighColor}"/>
                <Setter Property="Width" Value="28"/>
                <Setter Property="Margin" Value="-4,0,0,0"/>
                <Setter Property="CornerRadius" Value="14" />
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Canvas.ZIndex" Value="2"/>
            </Style>
            <Style TargetType="syncfusion:SelectedSegmentBorder" x:Key="shirtModelStyle">
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="HasShadow" Value="true"/>
                <Setter Property="Background" Value="{ThemeResource ShirtSelectedBackground}"/>
            </Style>
            <Style TargetType="syncfusion:SelectedSegmentBorder" x:Key="shirtSizeStyle">
                <Setter Property="CornerRadius" Value="2"/>
                <Setter Property="Background" Value="{ThemeResource SelectedBackground}"/>
            </Style>
            <common:VisiblityConverter x:Key="VisiblityConverter"/>
        </ResourceDictionary>

    </Page.Resources>

    <common:DemoLayout
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                HeaderText="Segmented Control using SelectedSegmentStyle and various customizations.">
        <common:DemoLayout.Example>
            <Grid 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
