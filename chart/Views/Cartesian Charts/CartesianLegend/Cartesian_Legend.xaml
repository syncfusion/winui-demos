                               VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ResourceDictionary>
                            </chart:SfCartesianChart.Resources>

                            <chart:SfCartesianChart.Legend>
                            <chart:ChartLegend ItemMargin="2" Padding="0,0,40,0">
                            </chart:ChartLegend>
                            </chart:SfCartesianChart.Legend>

                            <chart:SfCartesianChart.XAxes>
                                <chart:CategoryAxis ShowMajorGridLines="false" PlotOffsetStart="10" PlotOffsetEnd="10" AxisLineOffset="10" >
                                </chart:CategoryAxis>
                            </chart:SfCartesianChart.XAxes>

                            <chart:SfCartesianChart.YAxes>
                            <chart:NumericalAxis Maximum="120" Minimum="0" Interval="20" AxisLineStyle="{StaticResource axisStyle}" ShowMajorGridLines="False"
                                                 MajorTickStyle="{StaticResource axisStyle}" Header="Production in Millions">
                                <chart:NumericalAxis.LabelStyle>
                                    <chart:LabelStyle FontSize="13"/>
                                </chart:NumericalAxis.LabelStyle>
                            </chart:NumericalAxis>
                        </chart:SfCartesianChart.YAxes>

