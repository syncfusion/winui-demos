                     HorizontalAlignment=&quot;Center&quot; VerticalAlignment=&quot;Center&quot;/&gt;
            &lt;TextBlock HorizontalTextAlignment=&quot;Center&quot; Text=&quot;{Binding Item.Mexico}&quot;
