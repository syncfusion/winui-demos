<Page
    x:Class="Syncfusion.XlsIODemos.WinUI.Views.EncryptAndDecrypt"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:common="using:Syncfusion.DemosCommon.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="200"
    d:DesignWidth="800"
    mc:Ignorable="d"
    >
    <StackPanel>
    <common:DemoLayout 
        HeaderText="This example demonstrates how to encrypt and decrypt an Excel workbook  with a password."
        CSharpSource="{common:ConditionalXAML Individual=Syncfusion.XlsIODemos.WinUI/Assets/XlsIO/EncryptAndDecrypt_cs.txt,
                                                         Common=XlsIO/Assets/XlsIO/EncryptAndDecrypt_cs.txt}">
        <common:DemoLayout.Example>
            <ContentControl>
                <Grid x:Name="Security" Margin="5,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>         
                    <TextBlock x:Name="textBlock13" Grid.Row="14" Grid.ColumnSpan="4"/>
                    <TextBlock x:Name="textBlock14" Grid.Row="15" Grid.ColumnSpan="4" TextWrapping="Wrap" Text="Click the &quot;Encrypt Document&quot; button to view the encrypted Excel document and &quot;Decrypt Document&quot; to view the decrypted Excel document. Use &quot;syncfusion&quot; as the password to open the encrypted Excel document. Please note that Excel compatible viewer is required to open and view the Excel document."/>
                    <TextBlock x:Name="textBlock15" Grid.Row="16" Grid.ColumnSpan="4"/>
                    <StackPanel Name="stackPnlOptions" Grid.Row="17" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock x:Name="saveas" TextWrapping="Wrap" FontWeight="Bold" Text="Save As : "  Padding="0,5,0,0" />
                        <RadioButton GroupName="Save As" Content="XLS" x:Name="rdbtnXLS" Width="60" Margin="10,0,0,0"/>
                        <RadioButton GroupName="Save As" Content="XLSX" x:Name="rdbtnXLSX" Width="60" IsChecked="True" Margin="-40,0,0,0"/>
                    </StackPanel>
                    <Button x:Name="btnEncrypt" Grid.Row="19" Grid.ColumnSpan="1" Content="Encrypt Document" HorizontalAlignment="Left" Click="btnEncrypt_Click" Height="Auto" Width="160" Padding="10,10,10,10" Margin="0,10" />
                    <Button x:Name="btnDecrypt" Grid.Row="19" Grid.ColumnSpan="2" Content="Decrypt Document" HorizontalAlignment="Left" Click="btnDecrypt_Click" VerticalAlignment="Top" Height="Auto" Width="160" Padding="10,10,10,10" Margin="180,10,0,0" />
                </Grid>
            </ContentControl>
        </common:DemoLayout.Example>
    </common:DemoLayout>
    </StackPanel>
</Page>