<Page
    x:Class="Syncfusion.XlsIODemos.WinUI.Views.PivotTableLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:common="using:Syncfusion.DemosCommon.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="200"
    d:DesignWidth="800"
    mc:Ignorable="d"
    >
    <StackPanel>
    <common:DemoLayout 
        HeaderText="This sample demonstrates how to layout pivot table using XlsIO."
        CSharpSource="{common:ConditionalXAML Individual=Syncfusion.XlsIODemos.WinUI/Assets/XlsIO/PivotTableLayout_cs.txt,
                                                         Common=XlsIO/Assets/XlsIO/PivotTableLayout_cs.txt}">
        <common:DemoLayout.Example>
            <ContentControl>
                    <Grid x:Name="GettingStarted" Margin="5,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="textBlock7" Grid.Row="1" Grid.ColumnSpan="4"/>
                        <TextBlock x:Name="textBlock8" Grid.Row="2" Grid.ColumnSpan="4" TextWrapping="Wrap" Text="Click the &quot;Create Pivot Table&quot; button to view the created Excel document. Please note that Microsoft Excel viewer or Microsoft Excel is required to open and view the Excel document."/>
                        <TextBlock x:Name="textBlock9" Grid.Row="3" Grid.ColumnSpan="4"/>
                        <TextBlock x:Name="textBlock10" Grid.Row="4" Grid.ColumnSpan="4" TextWrapping="Wrap" Text="Click the &quot;Convert Pivot Table&quot; button to view the converted PDF document. Please note that PDF  viewer is required view the PDF document."/>
                        <TextBlock x:Name="textBlock11" Grid.Row="5" Grid.ColumnSpan="4"/>
                        <StackPanel Name="stackPnlOptions" Grid.Row="6" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBlock x:Name="LayoutOptions" TextWrapping="Wrap" Text="Layout options : " Padding="0,5,0,0" FontWeight="Bold"/>
                            <RadioButton GroupName="Layout options" Content="Compact" x:Name="rdbtnCompact" Width="20" Margin="10,0,0,0" IsChecked="True"/>
                            <RadioButton GroupName="Layout options" Content="Outline" x:Name="rdbtnOutline" Width="20" Margin="-20,0,0,0" />
                            <RadioButton GroupName="Layout options" Content="Tabular" x:Name="rdbtnTabular" Width="20" Margin="-27,0,0,0" />
                        </StackPanel>
                        <StackPanel Name="stackPnlbtnOptions" Grid.Row="7" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button x:Name="btnCreate"  Content="Create Pivot Table" HorizontalAlignment="Left" Click="btnCreate_Click" Height="Auto" Width="160" Padding="10,10,10,10" Margin="0,10,0,0" />
                            <Button x:Name="btnConvert" Content="Convert Pivot Table" HorizontalAlignment="Left" Click="btnConvert_Click" Height="Auto" Width="160" Padding="10,10,10,10" Margin="5,10,0,0" />
                        </StackPanel>
                        
                    </Grid>
                </ContentControl>
        </common:DemoLayout.Example>
    </common:DemoLayout>
    </StackPanel>
</Page>