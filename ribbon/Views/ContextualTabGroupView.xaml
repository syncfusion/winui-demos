<Page
    x:Class="Syncfusion.RibbonDemos.WinUI.Views.Ribbon.ContextualTabGroupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Syncfusion.RibbonDemos.WinUI"
    xmlns:common="using:Syncfusion.DemosCommon.WinUI" 
    xmlns:ribbon="using:Syncfusion.UI.Xaml.Ribbon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Page.DataContext>
        <local:ContextTabGroupViewModel />
    </Page.DataContext>

    <StackPanel>

        <common:DemoLayout HeaderText="Contextual tab groups are used to group the Ribbon tabs for easier navigation."
                           XamlSource="{common:ConditionalXAML Individual=Syncfusion.RibbonDemos.WinUI/Assets/Ribbon/ContextualTab_xaml.txt,
                                                                          Common=Ribbon/Assets/Ribbon/ContextualTab_xaml.txt}">
            <common:DemoLayout.Example>
                <Grid
                    BorderBrush="{ThemeResource ControlStrokeColorDefault}"
                    BorderThickness="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <ribbon:SfRibbon x:Name="ribbon" Grid.Row="0" >
                        
                        <ribbon:SfRibbon.Tabs>
                            <ribbon:RibbonTab Header="Home">
                                <ribbon:RibbonGroup Header="Clipboard"
                                                        LauncherButtonClick="RibbonGroup_LauncherButtonClick">
                                    <ribbon:RibbonSplitButton x:Name="pasteButton"
                                                                  Content="Paste"
                                                                  Icon="Paste"
                                                                  AllowedSizeModes="Large">
                                        <ribbon:RibbonSplitButton.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Paste" />
                                                <MenuFlyoutItem Text="Paste Special" />
                                                <MenuFlyoutItem Text="Set Default Paste" />
                                            </MenuFlyout>
                                        </ribbon:RibbonSplitButton.Flyout>
                                    </ribbon:RibbonSplitButton>
                                    <ribbon:RibbonButton x:Name="cutButton"
                                                             Content="Cut"
                                                             Icon="Cut"
                                                             AllowedSizeModes="Normal, Small" />
                                    <ribbon:RibbonButton x:Name="copyButton"
                                                             Content="Copy"
                                                             Icon="Copy"
                                                             AllowedSizeModes="Normal, Small" />
                                    <ribbon:RibbonButton x:Name="formatPainterButton"
                                                             Content="Format Painter"
                                                             AllowedSizeModes="Normal, Small" >
                                        <ribbon:RibbonButton.Icon>
                                            <FontIcon Glyph="&#xF0E3;" />
                                        </ribbon:RibbonButton.Icon>
                                    </ribbon:RibbonButton>
                                </ribbon:RibbonGroup>
                                <ribbon:RibbonGroup Header="File"
                                                        LauncherButtonClick="RibbonGroup_LauncherButtonClick">
                                    <ribbon:RibbonDropDownButton x:Name="newFileButton"
                                                                     Content="New File"
                                                                     AllowedSizeModes="Large">
                                        <ribbon:RibbonDropDownButton.Icon>
                                            <FontIcon Glyph="&#xE7C3;" />
                                        </ribbon:RibbonDropDownButton.Icon>
                                        <ribbon:RibbonDropDownButton.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Empty File" />
                                                <MenuFlyoutItem Text="Template File" />
                                            </MenuFlyout>
                                        </ribbon:RibbonDropDownButton.Flyout>
                                    </ribbon:RibbonDropDownButton>
                                    <ribbon:RibbonButton x:Name="openButton"
                                                             Content="Open"
                                                             AllowedSizeModes="Normal, Small" >
                                        <ribbon:RibbonButton.Icon>
                                            <FontIcon FontFamily="Segoe MDL2 Assets"
                                                      Glyph="&#xED25;" />
                                        </ribbon:RibbonButton.Icon>
                                    </ribbon:RibbonButton>
                                    <ribbon:RibbonButton x:Name="shareButton"
                                                             Content="Share"
                                                             Icon="Share"
                                                             AllowedSizeModes="Normal, Small" />
                                    <ribbon:RibbonButton x:Name="printButton"
                                                             Content="Print"
                                                             Icon="Print"
                                                             AllowedSizeModes="Normal, Small" />
                                </ribbon:RibbonGroup>
                                <ribbon:RibbonGroup Header="Font"
                                                        LauncherButtonClick="RibbonGroup_LauncherButtonClick">
                                    <ribbon:RibbonItemsHost MaxRowCount="2">
                                        <ribbon:RibbonComboBox x:Name="FontComboBox"
                                                               Width="200"
                                                               AllowFocusOnInteraction="True"
                                                               PlaceholderForeground="#A2A2A2"
                                                               PlaceholderText="Select Font">
                                            <ribbon:RibbonComboBoxItem Content="Calibri"
                                                                       IsSelected="True" />
                                            <ribbon:RibbonComboBoxItem Content="Arial" />
                                            <ribbon:RibbonComboBoxItem Content="Segoe UI" />
                                        </ribbon:RibbonComboBox>

                                        <ribbon:RibbonComboBox x:Name="FontSizeComboBox"
                                                               Width="97"
                                                               AllowFocusOnInteraction="True">
                                            <ribbon:RibbonComboBoxItem Content="12"
                                                                       IsSelected="True" />
                                            <ribbon:RibbonComboBoxItem Content="14" />
                                            <ribbon:RibbonComboBoxItem Content="18" />
                                            <ribbon:RibbonComboBoxItem Content="20" />
                                            <ribbon:RibbonComboBoxItem Content="24" />
                                            <ribbon:RibbonComboBoxItem Content="34" />
                                            <ribbon:RibbonComboBoxItem Content="46" />
                                        </ribbon:RibbonComboBox>
                                        <ribbon:RibbonToggleButton x:Name="Bold"
                                                                   Icon="Bold"/>
                                        <ribbon:RibbonToggleButton x:Name="Italic" 
                                                                   Icon="Italic"/>
                                        <ribbon:RibbonSplitButton Content="Underline"
                                                                      Icon="Underline"
                                                                      >
                                            <ribbon:RibbonSplitButton.Flyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="Underline" />
                                                    <MenuFlyoutItem Text="Double underline" />
                                                    <MenuFlyoutItem Text="Thick underline" />
                                                    <MenuFlyoutItem Text="Dotted underline" />
                                                </MenuFlyout>
                                            </ribbon:RibbonSplitButton.Flyout>
                                        </ribbon:RibbonSplitButton>
                                        <ribbon:RibbonButton Content="FontSize"
                                                                 Icon="FontSize"
                                                                  />
                                        <ribbon:RibbonButton Content="Font Increase"
                                                                 Icon="FontIncrease"
                                                                  />
                                        <ribbon:RibbonButton Content="Font Decrease"
                                                                 Icon="FontDecrease"
                                                                  />
                                    </ribbon:RibbonItemsHost>
                                </ribbon:RibbonGroup>
                                <ribbon:RibbonGroup Header="Editing"
                                                        ShowLauncherButton="False">
                                    <ribbon:RibbonSplitButton Content="Find"
                                                                  Icon="Find"
                                                                  >
                                        <ribbon:RibbonSplitButton.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Icon="Find" Text="Find" />
                                                <MenuFlyoutItem Icon="Find" Text="Advanced Find" />
                                                <MenuFlyoutItem Icon="GoToStart" Text="Go to" />
                                            </MenuFlyout>
                                        </ribbon:RibbonSplitButton.Flyout>
                                    </ribbon:RibbonSplitButton>
                                    <ribbon:RibbonButton Content="Replace"
                                                             Icon="RepeatOne"
                                                              />
                                    <ribbon:RibbonDropDownButton x:Name="selectAllButton"
                                                                     Content="Select"
                                                                     Icon="SelectAll"
                                                                     >
                                        <ribbon:RibbonDropDownButton.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Icon="SelectAll" Text="Select All" />
                                                <MenuFlyoutItem Icon="SelectAll" Text="Select Objects" />
                                                <MenuFlyoutItem Icon="ClearSelection" Text="Selection Pane" />
                                            </MenuFlyout>
                                        </ribbon:RibbonDropDownButton.Flyout>
                                    </ribbon:RibbonDropDownButton>
                                </ribbon:RibbonGroup>
                                <ribbon:RibbonGroup Header="Paragraph"
                                                        ShowLauncherButton="False">
                                    <ribbon:RibbonItemsHost MaxRowCount="2">
                                        <ribbon:RibbonToggleButton x:Name="AlignLeft" 
                                                                   Icon="AlignLeft"/>
                                        <ribbon:RibbonToggleButton x:Name="AlignCenter" 
                                                                   Icon="AlignCenter"/>
                                        <ribbon:RibbonToggleButton x:Name="AlignRight" 
                                                                   Icon="AlignRight"/>
                                        <ribbon:RibbonButton x:Name="boldListButton" >
                                            <ribbon:RibbonButton.Icon>
                                                <FontIcon x:Name="BoldList"
                                                          Glyph="&#xE8FD;" />
                                            </ribbon:RibbonButton.Icon>
                                        </ribbon:RibbonButton>
                                        <ribbon:RibbonButton x:Name="checkListButton" >
                                            <ribbon:RibbonButton.Icon>
                                                <FontIcon x:Name="CheckList"
                                                          Glyph="&#xE9D5;" />
                                            </ribbon:RibbonButton.Icon>
                                        </ribbon:RibbonButton>
                                        <ribbon:RibbonButton x:Name="groupListButton" >
                                            <ribbon:RibbonButton.Icon>
                                                <FontIcon x:Name="GroupList"
                                                          Glyph="&#xF168;" />
                                            </ribbon:RibbonButton.Icon>
                                        </ribbon:RibbonButton>
                                    </ribbon:RibbonItemsHost>
                                </ribbon:RibbonGroup>
                                <ribbon:RibbonGroup Header="Voice"
                                                        ShowLauncherButton="False">
                                    <ribbon:RibbonSplitButton x:Name="microphoneButton"
                                                                  Content="Dictate"
                                                                  Icon="Microphone"
                                                                  AllowedSizeModes="Large">
                                        <ribbon:RibbonSplitButton.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Chinese" />
                                                <MenuFlyoutItem Text="English" />
                                                <MenuFlyoutItem Text="French" />
                                                <MenuFlyoutItem Text="German" />
                                            </MenuFlyout>
                                        </ribbon:RibbonSplitButton.Flyout>
                                    </ribbon:RibbonSplitButton>
                                </ribbon:RibbonGroup>
                            </ribbon:RibbonTab>
                            <ribbon:RibbonTab Header="Insert">
                                <ribbon:RibbonGroup Grid.Row="0"
                                                        Grid.Column="1"
                                                        Header="Illustrations"
                                                        LauncherButtonClick="RibbonGroup_LauncherButtonClick">
                                    <ribbon:RibbonDropDownButton x:Name="pictureButton"
                                                                     Content="Pictures"
                                                                     Icon="Pictures"
                                                                     >
                                        <ribbon:RibbonDropDownButton.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Icon="SyncFolder"
                                                                Text="This Device" />
                                                <MenuFlyoutItem Icon="DisconnectDrive"
                                                                Text="Online Picture" />
                                            </MenuFlyout>
                                        </ribbon:RibbonDropDownButton.Flyout>
                                    </ribbon:RibbonDropDownButton>
                                    <ribbon:RibbonDropDownButton x:Name="shapesButton"
                                                                     Content="Shapes"
                                                                     >
                                        <ribbon:RibbonDropDownButton.Icon>
                                            <FontIcon x:Name="Shapes"
                                                      Glyph="&#xF158;" />
                                        </ribbon:RibbonDropDownButton.Icon>
                                        <ribbon:RibbonDropDownButton.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Lines">
                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon x:Name="Lines"
                                                                  Glyph="&#xF7B7;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem Text="Rectangle">
                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon x:Name="Rectangle"
                                                                  Glyph="&#xEA3A;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </ribbon:RibbonDropDownButton.Flyout>
                                    </ribbon:RibbonDropDownButton>
                                    <ribbon:RibbonButton x:Name="iconsButton"
                                                             Content="Icons"
                                                             >
                                        <ribbon:RibbonButton.Icon>
                                            <FontIcon x:Name="Icons"
                                                      Glyph="&#xECAA;" />
                                        </ribbon:RibbonButton.Icon>
                                    </ribbon:RibbonButton>
                                    <ribbon:RibbonSplitButton x:Name="disconnectDriveButton"
                                                                  Content="3D Models"
                                                                  Icon="DisconnectDrive"
                                                                  >
                                        <ribbon:RibbonSplitButton.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="This Device" />
                                                <MenuFlyoutItem Text="Online" />
                                            </MenuFlyout>
                                        </ribbon:RibbonSplitButton.Flyout>
                                    </ribbon:RibbonSplitButton>
                                    <ribbon:RibbonButton x:Name="bookmarksButton"
                                                             Content="SmartArt"
                                                             Icon="Bookmarks"
                                                              />
                                    <ribbon:RibbonButton x:Name="characterButton"
                                                             Content="Chart"
                                                             Icon="Character"
                                                              />
                                    <ribbon:RibbonButton x:Name="fullScreenButton"
                                                             Content="Screenshot"
                                                             Icon="FullScreen"
                                                              />
                                </ribbon:RibbonGroup>
                                <ribbon:RibbonGroup Header="Comments"
                                                        LauncherButtonClick="RibbonGroup_LauncherButtonClick">
                                    <ribbon:RibbonButton x:Name="leaveChatButton"
                                                             Content="Comment"
                                                             Icon="LeaveChat"
                                                              />
                                </ribbon:RibbonGroup>
                                <ribbon:RibbonGroup Header="Add-ins"
                                                        ShowLauncherButton="False">
                                    <ribbon:RibbonItemsHost MaxRowCount="2">
                                        <ribbon:RibbonButton x:Name="addButton"
                                                                 Content="Get Add-ins"
                                                                 Icon="Add"
                                                                  />
                                        <ribbon:RibbonDropDownButton x:Name="viewAllButton"
                                                                         Content="My Add-ins"
                                                                         Icon="ViewAll"
                                                                         >
                                            <ribbon:RibbonDropDownButton.Flyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="See All" />
                                                    <MenuFlyoutItem Text="Others" />
                                                </MenuFlyout>
                                            </ribbon:RibbonDropDownButton.Flyout>
                                        </ribbon:RibbonDropDownButton>
                                    </ribbon:RibbonItemsHost>
                                    <ribbon:RibbonButton x:Name="worldButton"
                                                             Content="Wikipedia"
                                                             Icon="World"
                                                              />
                                </ribbon:RibbonGroup>
                            </ribbon:RibbonTab>
                            <ribbon:RibbonTab Header="View">
                                <ribbon:RibbonGroup Header="Views"
                                                        ShowLauncherButton="False">
                                    <ribbon:RibbonButton x:Name="readButton"
                                                             Content="Read&#x0a;Mode"
                                                             Icon="Read"
                                                              />
                                    <ribbon:RibbonButton x:Name="pritButton"
                                                             Content="Print&#10;Layout"
                                                             Icon="Print"
                                                              />
                                    <ribbon:RibbonButton x:Name="browsePhotosButton"
                                                             Content="Web&#10;Layout"
                                                             Icon="BrowsePhotos"
                                                              />
                                    <ribbon:RibbonButton x:Name="mapDriveButton"
                                                             Content="Draft"
                                                             Icon="MapDrive"
                                                              />
                                    <ribbon:RibbonButton x:Name="outlineButton"
                                                             Content="Outline"
                                                             Icon="MapDrive"
                                                              />
                                </ribbon:RibbonGroup>
                                <ribbon:RibbonGroup Header="Views"
                                                        ShowLauncherButton="False">
                                    <ribbon:RibbonItemHost>
                                        <ribbon:RibbonItemHost.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Content="Ruler" />
                                            </DataTemplate>
                                        </ribbon:RibbonItemHost.ItemTemplate>
                                    </ribbon:RibbonItemHost>
                                    <ribbon:RibbonItemHost>
                                        <ribbon:RibbonItemHost.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Content="Gridlines" />
                                            </DataTemplate>
                                        </ribbon:RibbonItemHost.ItemTemplate>
                                    </ribbon:RibbonItemHost>
                                    <ribbon:RibbonItemHost>
                                        <ribbon:RibbonItemHost.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Content="Navigation Pane" />
                                            </DataTemplate>
                                        </ribbon:RibbonItemHost.ItemTemplate>
                                    </ribbon:RibbonItemHost>
                                </ribbon:RibbonGroup>
                            </ribbon:RibbonTab>
                        </ribbon:SfRibbon.Tabs>

                        <ribbon:SfRibbon.ContextualTabGroups>
                            <ribbon:RibbonContextualTabGroup x:Name="ImageOptions"
                                Visibility="Collapsed" 
                                Foreground="{ThemeResource SystemAccentColor}"
                                SelectFirstTabOnVisible="True" >
                                <ribbon:RibbonContextualTabGroup.Tabs>
                                    <ribbon:RibbonTab Header="Picture Format">
                                        <ribbon:RibbonGroup Header="Image Stretch">
                                            <ribbon:RibbonItemHost>
                                                <ribbon:RibbonItemHost.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>

                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <RadioButton x:Name="StretchNone" 
                                                                Grid.Row="0"
                                                                Grid.Column="0"
                                                                Content="None"
                                                                IsChecked="True"
                                                                GroupName="ImageStretch"/>
                                                            
                                                            <RadioButton x:Name="StretchFill"
                                                                Grid.Row="0"
                                                                Grid.Column="1"
                                                                Content="Fill" 
                                                                GroupName="ImageStretch"/>
                                                            
                                                            <RadioButton x:Name="StretchUniform" 
                                                                Grid.Row="1"
                                                                Grid.Column="0"
                                                                Content="Uniform" 
                                                                GroupName="ImageStretch"/>
                                                            
                                                            <RadioButton x:Name="StretchUniformToFill"
                                                                Grid.Row="1"
                                                                Grid.Column="1"
                                                                Content="UniformToFill"
                                                                GroupName="ImageStretch"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ribbon:RibbonItemHost.ItemTemplate>
                                            </ribbon:RibbonItemHost>
                                        </ribbon:RibbonGroup>
                                        <ribbon:RibbonGroup Header="Picture Styles">
                                            <ribbon:RibbonDropDownButton Content="Picture Border">
                                                <ribbon:RibbonDropDownButton.Flyout>
                                                    <MenuFlyout Placement="Bottom">
                                                        <MenuFlyoutItem Text="No Outline" />
                                                        <MenuFlyoutItem Text="Weight" />
                                                        <MenuFlyoutItem Text="Dashes" />
                                                        <MenuFlyoutItem Text="Standard Colors" />
                                                    </MenuFlyout>
                                                </ribbon:RibbonDropDownButton.Flyout>
                                            </ribbon:RibbonDropDownButton>
                                            <ribbon:RibbonDropDownButton Content="Picture Effects" Icon="ViewAll">
                                                <ribbon:RibbonDropDownButton.Flyout >
                                                    <MenuFlyout Placement="Bottom"  >
                                                        <MenuFlyoutItem Text="Preset" />
                                                        <MenuFlyoutItem Text="Shadow" />
                                                        <MenuFlyoutItem Text="Reflection" />
                                                        <MenuFlyoutItem Text="Glow" />
                                                    </MenuFlyout>
                                                </ribbon:RibbonDropDownButton.Flyout>
                                            </ribbon:RibbonDropDownButton>
                                            <ribbon:RibbonDropDownButton Content="Align" Icon="ViewAll" >
                                                <ribbon:RibbonDropDownButton.Flyout>
                                                    <MenuFlyout>
                                                        <MenuFlyoutItem Text="Align Center" />
                                                        <MenuFlyoutItem Text="Align Left" />
                                                        <MenuFlyoutItem Text="Align Right" />
                                                        <MenuFlyoutItem Text="Align Top" />
                                                    </MenuFlyout>
                                                </ribbon:RibbonDropDownButton.Flyout>
                                            </ribbon:RibbonDropDownButton>
                                        </ribbon:RibbonGroup>
                                    </ribbon:RibbonTab>
                                </ribbon:RibbonContextualTabGroup.Tabs>
                            </ribbon:RibbonContextualTabGroup>
                            <ribbon:RibbonContextualTabGroup x:Name="TableOptions"
                                Visibility="Collapsed"
                                Foreground="{ThemeResource SystemAccentColor}"
                                SelectFirstTabOnVisible="True">
                                <ribbon:RibbonContextualTabGroup.Tabs>
                                    <ribbon:RibbonTab Header="Item Design">
                                        <ribbon:RibbonGroup>
                                            <ribbon:RibbonItemHost>
                                                <ribbon:RibbonItemHost.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>

                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <RadioButton 
                                                                Content="Image"  
                                                                Grid.Row="0" 
                                                                Grid.Column="0" 
                                                                GroupName="Template"
                                                                IsChecked="True"
                                                                Tag="ImageTemplate"/>
                                                            
                                                            <RadioButton   
                                                                Grid.Row="0" 
                                                                Grid.Column="1" 
                                                                Content="Icon/Text"
                                                                GroupName="Template"
                                                                Tag="IconTextTemplate" />
                                                            
                                                            <RadioButton 
                                                                Grid.Row="1" 
                                                                Grid.Column="0" 
                                                                Content="Image/Text"
                                                                GroupName="Template"
                                                                Tag="ImageTextTemplate" />
                                                            
                                                            <RadioButton 
                                                                Grid.Row="1" 
                                                                Grid.Column="1" 
                                                                Content="Text"
                                                                GroupName="Template"
                                                                Tag="TextTemplate" />

                                                            <ToggleButton   
                                                                Grid.Row="2" 
                                                                Grid.ColumnSpan="1"  
                                                                Content="Reverse FlowDirection" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ribbon:RibbonItemHost.ItemTemplate>
                                            </ribbon:RibbonItemHost>
                                        </ribbon:RibbonGroup>
                                        <ribbon:RibbonGroup>
                                            <ribbon:RibbonItemHost>
                                                <ribbon:RibbonItemHost.ItemTemplate>
                                                    <DataTemplate>
                                                        <CheckBox Content="Allow Drop" IsChecked="True"/>
                                                    </DataTemplate>
                                                </ribbon:RibbonItemHost.ItemTemplate>
                                            </ribbon:RibbonItemHost>
                                            <ribbon:RibbonItemHost>
                                                <ribbon:RibbonItemHost.ItemTemplate>
                                                    <DataTemplate>
                                                        <CheckBox Content="Can Drag" IsChecked="True"/>
                                                    </DataTemplate>
                                                </ribbon:RibbonItemHost.ItemTemplate>
                                            </ribbon:RibbonItemHost>
                                            <ribbon:RibbonItemHost>
                                                <ribbon:RibbonItemHost.ItemTemplate>
                                                    <DataTemplate>
                                                        <CheckBox Content="Can Reorder" IsChecked="True"/>
                                                    </DataTemplate>
                                                </ribbon:RibbonItemHost.ItemTemplate>
                                            </ribbon:RibbonItemHost>
                                        </ribbon:RibbonGroup>
                                    </ribbon:RibbonTab>
                                    <ribbon:RibbonTab Header="Layout">
                                        <ribbon:RibbonGroup Header="Table" >
                                            <ribbon:RibbonItemHost>
                                                <ribbon:RibbonItemHost.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Vertical">
                                                            <ribbon:RibbonButton Content="ViewGridlines" >
                                                                <ribbon:RibbonButton.Icon>
                                                                    <SymbolIcon Symbol="List"/>
                                                                </ribbon:RibbonButton.Icon>
                                                            </ribbon:RibbonButton>
                                                            <ribbon:RibbonButton Content="Properties" >
                                                                <ribbon:RibbonButton.Icon>
                                                                    <SymbolIcon Symbol="OpenWith"/>
                                                                </ribbon:RibbonButton.Icon>
                                                            </ribbon:RibbonButton>
                                                            <ribbon:RibbonButton Content="Select" >
                                                                <ribbon:RibbonButton.Icon>
                                                                    <SymbolIcon Symbol="SelectAll"/>
                                                                </ribbon:RibbonButton.Icon>
                                                            </ribbon:RibbonButton>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ribbon:RibbonItemHost.ItemTemplate>
                                            </ribbon:RibbonItemHost>
                                        </ribbon:RibbonGroup>
                                        <ribbon:RibbonGroup Header="Draw">
                                            <ribbon:RibbonItemHost>
                                                <ribbon:RibbonItemHost.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Vertical">
                                                            <ribbon:RibbonButton Content="Draw table" >
                                                                <ribbon:RibbonButton.Icon>
                                                                    <SymbolIcon Symbol="PreviewLink"/>
                                                                </ribbon:RibbonButton.Icon>
                                                            </ribbon:RibbonButton>
                                                            <ribbon:RibbonButton Content="Eraser" >
                                                                <ribbon:RibbonButton.Icon>
                                                                    <SymbolIcon Symbol="ClearSelection"/>
                                                                </ribbon:RibbonButton.Icon>
                                                            </ribbon:RibbonButton>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ribbon:RibbonItemHost.ItemTemplate>
                                            </ribbon:RibbonItemHost>
                                        </ribbon:RibbonGroup>
                                    </ribbon:RibbonTab>
                                </ribbon:RibbonContextualTabGroup.Tabs>
                            </ribbon:RibbonContextualTabGroup>
                        </ribbon:SfRibbon.ContextualTabGroups>
                        
                    </ribbon:SfRibbon>

                    <Grid
                        Grid.Row="1" 
                        Margin="0,10,0,0"
                        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        PointerPressed="Grid_PointerPressed">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Row="0" 
                            Grid.ColumnSpan="2"
                            Margin="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="Click the below image or grid view to display its corresponding contextual tab group"/>

                        <ScrollViewer 
                            Grid.Row="1" 
                            Grid.Column="0" 
                            Margin="20" 
                            VerticalScrollBarVisibility="Auto" 
                            VerticalScrollMode="Auto">

                            <ToggleButton x:Name="ImageButton" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Padding="10"
                                Click="ImageButton_Click">
                                <Image
                                    Stretch="None"
                                    Source="{Binding SelectedEmployee.ProfilePicture}"/>
                            </ToggleButton>
                        </ScrollViewer>

                        <ScrollViewer 
                            Grid.Row="1"
                            Grid.Column="1" 
                            Margin="20" 
                            VerticalScrollBarVisibility="Auto" 
                            VerticalScrollMode="Auto">

                            <GridView x:Name="ContentGridView" 
                                Margin="10"
                                BorderThickness="1" 
                                CornerRadius="6"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ItemsSource="{Binding Employees}"
                                SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}"
                                SelectionChanged="ContentGridView_SelectionChanged">

                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="4">
                                            <TextBlock
                                                Padding="2"
                                                HorizontalAlignment="Center"
                                                Opacity="0.87"
                                                FontSize="14"
                                                Text="{Binding Name}"/>
                                            <TextBlock
                                                Padding="1"
                                                HorizontalAlignment="Center"
                                                Opacity="0.54"
                                                FontSize="12"
                                                Text="{Binding Designation}"/>
                                            <TextBlock
                                                Padding="1"
                                                HorizontalAlignment="Center"
                                                Opacity="0.54"
                                                FontSize="12"
                                                Text="{Binding Country}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                                
                                <GridView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsWrapGrid
                                            Margin="5"
                                            MaximumRowsOrColumns="3"
                                            Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </GridView.ItemsPanel>

                            </GridView>

                        </ScrollViewer>

                    </Grid>

                </Grid>
            </common:DemoLayout.Example>
        </common:DemoLayout>
        
    </StackPanel>
    
</Page>
