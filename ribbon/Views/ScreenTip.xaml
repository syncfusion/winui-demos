                                                </DataTemplate>
                                            </ribbon:ScreenTip.ContentTemplate>
                                            <ribbon:ScreenTip.TitleTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="Format Painter" Grid.Column="0"/>
                                                        <TextBlock Text="(Ctrl+w)" Grid.Column="1" />
                                                    </Grid>
                                                </DataTemplate>
                                            </ribbon:ScreenTip.TitleTemplate>
                                        </ribbon:ScreenTip>
                                    </ribbon:RibbonButton.ScreenTip>
                                </ribbon:RibbonButton>
                            </ribbon:RibbonGroup>
                            <ribbon:RibbonGroup Header="Editing"
                                                LauncherButtonClick="RibbonGroup_LauncherButtonClick">
                                <ribbon:RibbonSplitButton Content="Find" 
                                                          AllowedSizeModes="Normal"
                                                          Icon="Find"
                                                          Command="{Binding ButtonCommand}" 
                                                          CommandParameter="Bold">
                                    <ribbon:RibbonSplitButton.Flyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem Command="{Binding ButtonCommand}"
                                                                CommandParameter="Find -&gt; Find command"
                                                                Icon="Find"
                                                                Text="Find" />
                                            <MenuFlyoutItem Command="{Binding ButtonCommand}"
                                                                CommandParameter="Find -&gt; Advanced Find"
                                                                Icon="Find"
                                                                Text="Advanced Find" />
                                            <MenuFlyoutItem Command="{Binding ButtonCommand}"
                                                                CommandParameter="Find -&gt; Go to"
                                                                Icon="GoToStart"
                                                                Text="Go to" />
                                        </MenuFlyout>
                                    </ribbon:RibbonSplitButton.Flyout>
                                    <ribbon:RibbonSplitButton.ScreenTip>
                                        <ribbon:ScreenTip Title ="Find">
                                            <ribbon:ScreenTip.ContentTemplate>
                                                <DataTemplate>
                                                    <StackPanel>
                                                        <TextBlock Text="Find text or other content in the document." 
                                                                   Width="180"
                                                                   TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ribbon:ScreenTip.ContentTemplate>
                                        </ribbon:ScreenTip>
                                    </ribbon:RibbonSplitButton.ScreenTip>
                                </ribbon:RibbonSplitButton>
                                <ribbon:RibbonButton Content="Replace"
                                                     AllowedSizeModes="Normal"
                                                     Icon="RepeatOne"
                                                     Command="{Binding ButtonCommand}" 
                                                     CommandParameter="Replace">
                                    <ribbon:RibbonButton.ScreenTip>
                                        <ribbon:ScreenTip Title ="Replace">
                                            <ribbon:ScreenTip.ContentTemplate>
                                                <DataTemplate>
                                                    <StackPanel>
                                                        <TextBlock Text="Search for text you'd like to change, and replace with it something else." 
                                                                   Width="200"
                                                                   TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ribbon:ScreenTip.ContentTemplate>
                                        </ribbon:ScreenTip>
                                    </ribbon:RibbonButton.ScreenTip>
                                </ribbon:RibbonButton>
                                <ribbon:RibbonDropDownButton x:Name="selectAllButton"
                                                             Content="Select"
                                                             AllowedSizeModes="Normal"
                                                             Icon="SelectAll"
                                                             Command="{Binding ButtonCommand}" 
                                                             CommandParameter="Select">
                                    <ribbon:RibbonDropDownButton.Flyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem Icon="SelectAll" Text="Select All" />
                                            <MenuFlyoutItem Icon = "SelectAll" Text="Select Objects" />
                                            <MenuFlyoutItem Icon = "ClearSelection" Text="Selection Pane" />
                                        </MenuFlyout>
                                    </ribbon:RibbonDropDownButton.Flyout>
                                    <ribbon:RibbonDropDownButton.ScreenTip>
                                        <ribbon:ScreenTip Title ="Select">
                                            <ribbon:ScreenTip.ContentTemplate>
                                                <DataTemplate>
                                                    <StackPanel>
                                                        <TextBlock Text="Select text or object in your document." 
                                                                   Width="180"
                                                                   TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ribbon:ScreenTip.ContentTemplate>
                                        </ribbon:ScreenTip>
                                    </ribbon:RibbonDropDownButton.ScreenTip>
                                </ribbon:RibbonDropDownButton>
                            </ribbon:RibbonGroup>
                            <ribbon:RibbonGroup Header="Font"
                                                LauncherButtonClick="RibbonGroup_LauncherButtonClick" 
                                                OverflowItemDisplayMode="GroupLevel">
                                <ribbon:RibbonItemsHost MaxRowCount="2" Width="250">
                                    <ribbon:RibbonComboBox x:Name="FontComboBox"
                                                    Width="200"
                                                    AllowFocusOnInteraction="True"
                                                    PlaceholderText="Select Font">
                                        <ribbon:RibbonComboBoxItem Content = "Calibri"
                                                            IsSelected="True" />
                                        <ribbon:RibbonComboBoxItem Content ="Arial" />
                                        <ribbon:RibbonComboBoxItem Content ="Segoe UI" />
                                        <ribbon:RibbonComboBox.ScreenTip>
                                            <ribbon:ScreenTip Title="Font" Content="Pick a new font for your text."/>
                                        </ribbon:RibbonComboBox.ScreenTip>
                                    </ribbon:RibbonComboBox>
                                    <ribbon:RibbonComboBox x:Name="FontSizeComboBox"
                                                               Header="Font Size"
                                                               HorizontalAlignment="Stretch"
                                                               MinWidth="97"
                                                               AllowFocusOnInteraction="True"
                                                               DisplayOptions="Normal,Overflow">
                                        <ribbon:RibbonComboBoxItem Content="12"
                                                                       IsSelected="True" />
                                        <ribbon:RibbonComboBoxItem Content="14" />
                                        <ribbon:RibbonComboBoxItem Content="18" />
                                        <ribbon:RibbonComboBoxItem Content="20" />
                                        <ribbon:RibbonComboBoxItem Content="24" />
                                        <ribbon:RibbonComboBoxItem Content="34" />
                                        <ribbon:RibbonComboBoxItem Content="46" />
                                        <ribbon:RibbonComboBox.ScreenTip>
                                            <ribbon:ScreenTip Title="Font Size" Content="Change a font size for your text."/>
                                        </ribbon:RibbonComboBox.ScreenTip>
                                    </ribbon:RibbonComboBox>
                                    <ribbon:RibbonToggleButton x:Name="Bold"
                                                               AllowedSizeModes="Small"
                                                               Icon="Bold"
                                                               Command="{Binding ButtonCommand}" 
                                                               CommandParameter="Bold">
                                        <ribbon:RibbonToggleButton.ScreenTip>
                                            <ribbon:ScreenTip Title ="Bold" Content="Make your text bold."  />
                                        </ribbon:RibbonToggleButton.ScreenTip>
                                    </ribbon:RibbonToggleButton>
                                    <ribbon:RibbonToggleButton x:Name="Italic"
                                                               AllowedSizeModes="Small"
                                                               Icon="Italic"
                                                               Command="{Binding ButtonCommand}" 
                                                               CommandParameter="Italic">
                                        <ribbon:RibbonToggleButton.ScreenTip>
                                            <ribbon:ScreenTip Title ="Italic" Content="Italicize your text."  />
                                        </ribbon:RibbonToggleButton.ScreenTip>
                                    </ribbon:RibbonToggleButton>
                                    <ribbon:RibbonSplitButton Command="{Binding ButtonCommand}"
                                                                      CommandParameter="Underline"
                                                                      Content="Underline"
                                                                      DisplayOptions="Normal,Simplified"
                                                                      Icon="Underline">
                                        <ribbon:RibbonSplitButton.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Command="{Binding ButtonCommand}"
                                                                    CommandParameter="Underline -&gt; Underline command"
                                                                    Text="Underline" />
                                                <MenuFlyoutItem Command="{Binding ButtonCommand}"
                                                                    CommandParameter="Underline -&gt; Double underline"
                                                                    Text="Double underline" />
                                                <MenuFlyoutItem Command="{Binding ButtonCommand}"
                                                                    CommandParameter="Underline -&gt; Thick underline"
                                                                    Text="Thick underline" />
                                                <MenuFlyoutItem Command="{Binding ButtonCommand}"
                                                                    CommandParameter="Underline -&gt; Dotted underline"
                                                                    Text="Dotted underline" />
                                            </MenuFlyout>
                                        </ribbon:RibbonSplitButton.Flyout>
                                        <ribbon:RibbonSplitButton.ScreenTip>
                                            <ribbon:ScreenTip Title ="Underline" Content="Underline your text."  />
                                        </ribbon:RibbonSplitButton.ScreenTip>
                                    </ribbon:RibbonSplitButton>
                                </ribbon:RibbonItemsHost>
                            </ribbon:RibbonGroup>
                            <ribbon:RibbonGroup Header="Style"
                                                LauncherButtonClick="RibbonGroup_LauncherButtonClick">
                                <ribbon:RibbonGallery x:Name="ribbonGallery"
                                              ItemHeight="50"
                                              AllowedSizeModes="Large"
                                              ItemWidth="100"
                                              MaxColumnCount="5">
                                    <ribbon:RibbonGallery.Items>
                                        <ribbon:RibbonGalleryItem x:Name="SelectedItem" HorizontalContentAlignment="Center"
                                                                          VerticalContentAlignment="Center" 
                                                                          FontWeight="Normal" FontSize="14" >
                                            <ribbon:RibbonGalleryItem.Content>
                                                <StackPanel Orientation="Vertical" >
                                                    <TextBlock Text="AaBbCcDd" FontWeight="Normal"  />
