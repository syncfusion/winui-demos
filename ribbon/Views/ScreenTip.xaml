                                    <ribbon:RibbonGallery.ScreenTip>
                                        <ribbon:ScreenTip Title="FontStyle">
                                            <ribbon:ScreenTip.ContentTemplate>
                                                <DataTemplate>
                                                    <StackPanel>
                                                        <TextBlock Text="Styles give your document a consistent, polished look." 
                                                                   Width="180"
                                                                   TextWrapping="Wrap"/>
