                <common:DemoLayout.Example>
                    <Grid Height="480" VerticalAlignment="Center">
                        <Grid.Resources>
                            <local:AppointmentTemplateSelector x:Key="appointmentTemplateSelector"
                                                               CancerAwarenessAppointmentTemplate="{StaticResource cancerAppointmentTemplate}" 
                                                               TourismAppointmentTemplate="{StaticResource tourismAppointmentTemplate}" 
