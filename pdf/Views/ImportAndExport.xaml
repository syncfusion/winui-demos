<Page
    x:Class="Syncfusion.PdfDemos.WinUI.ImportAndExport"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:Syncfusion.DemosCommon.WinUI" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DataContext="{d:DesignInstance Type=common:MainViewModel}"
    Background="Transparent"
    mc:Ignorable="d">
    <StackPanel>
        <common:DemoLayout 
                HeaderText="This demo shows how to import or export form data from the PDF document. It supports FDF, XFDF, XML, and JSON format for import and export. It is possible to save the exported form data to file or database."
                CSharpSource="{common:ConditionalXAML Individual=Syncfusion.PdfDemos.WinUI/Views/Resources/SourceFiles/ImportAndExport_xaml_cs.txt,
                                                                 Common=Pdf/Views/Resources/SourceFiles/ImportAndExport_xaml_cs.txt}">
            <common:DemoLayout.Example>

                <Grid x:Name="grdMain" Margin="10,10,10,10">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock TextWrapping="Wrap" Padding="0,0,0,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="8" >
                        <TextBlock.Text>
                            Please click the Import Form Data button to save and view the document generated by Syncfusion PDF library.
                        </TextBlock.Text>
                    </TextBlock>

                    <TextBlock HorizontalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="8" TextWrapping="Wrap" Text="" VerticalAlignment="Center" />
                    <TextBlock VerticalAlignment="Center" Grid.Row="3" HorizontalAlignment="Left" Grid.Column="0" Grid.ColumnSpan="8" Text="Choose the data type for import or export" Height="21" Margin="0,10,0,0" />
                    <RadioButton GroupName="format" x:Name="fdf" Grid.Row="4" Content="FDF" Grid.ColumnSpan="8" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" />
                    <RadioButton GroupName="format" x:Name="xfdf" Grid.Row="4" Content="XFDF" Grid.ColumnSpan="8" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Margin="100,0,0,0" />
                    <RadioButton GroupName="format" x:Name="xml" Grid.Row="4" Content="XML" IsChecked="True" Grid.ColumnSpan="8" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26"  Margin="200,0,0,0" />

                    <TextBlock HorizontalAlignment="Center" Grid.Row="13" Grid.Column="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" />
                    <Button Content="View Template" Padding="20,10,20,10" HorizontalAlignment="Left"  Grid.Row="14" Grid.ColumnSpan="8"  VerticalAlignment="Top" Click="button1_Click"/>
                    <Button Content="Import Form Data" x:Name="btn" Padding="20,10,20,10" Grid.Row="14" Grid.ColumnSpan="8" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button2_Click" Margin="158,0,0,0"/>
                    
                    <TextBlock HorizontalAlignment="Center" Grid.Row="5" Grid.ColumnSpan="8" TextWrapping="Wrap" Text="" VerticalAlignment="Center" />
                    <TextBlock VerticalAlignment="Center" Grid.Row="6" HorizontalAlignment="Left" Grid.Column="0" Grid.ColumnSpan="6" Text="Select import or export" Height="21" Margin="0,10,0,0" Width="168"/>
                    <RadioButton GroupName="importorexport" x:Name="import" Grid.Row="7" Content="Import" IsChecked="True" Grid.ColumnSpan="6" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26"  Checked="import_Checked"/>
                    <RadioButton GroupName="importorexport" x:Name="export" Grid.Row="7" Content="Export" Grid.ColumnSpan="6" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Margin="100,0,0,0"  Checked="export_Checked" />

                </Grid>
            </common:DemoLayout.Example>
        </common:DemoLayout>
    </StackPanel>
</Page>
