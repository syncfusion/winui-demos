<Page
    x:Class="Syncfusion.PdfDemos.WinUI.Certificate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:Syncfusion.DemosCommon.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DataContext="{d:DesignInstance Type=common:MainViewModel}"
    Background="Transparent"
    mc:Ignorable="d">
    <StackPanel>
        <common:DemoLayout 
                HeaderText="This demo shows how to dynamically generates the course completion certificate for online learning portal with participant name, course name and date of completion."
                CSharpSource="{common:ConditionalXAML Individual=Syncfusion.PdfDemos.WinUI/Assets/Pdf/Certificate_xaml_cs.txt,
                                                                 Common=Pdf/Assets/Pdf/Certificate_xaml_cs.txt}">
            <common:DemoLayout.Example>
                <Grid x:Name="grdMain" Margin="10,10,10,10" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock HorizontalAlignment="Center" Grid.Row="0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" />
                    <TextBlock TextWrapping="Wrap" Padding="0,0,0,0" Grid.Row="0" Grid.ColumnSpan="8">
                        <TextBlock.Text>
                            Please click the Generate PDF button to save and view the PDF document generated by Syncfusion® PDF library.
                        </TextBlock.Text>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" />
                    <TextBlock VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Width="314" HorizontalAlignment="Left" Text="Recipient Name" Height="21" Margin="0,9.333,0,0"/>
                    <TextBox x:Name="name" Text="John Milton" Grid.Row="3" HorizontalAlignment="Left" Grid.Column="0" Grid.ColumnSpan="6" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Margin="0,5.333,0,0" Width="400"/>

                    <TextBlock HorizontalAlignment="Center" Grid.Row="4" TextWrapping="Wrap" Text="" VerticalAlignment="Center" />
                    <TextBlock VerticalAlignment="Center" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" Text="Course Name" Height="21" Margin="0,0,0,0" Width="270"/>
                    <TextBox x:Name="courseName" Text="Microsoft Azure Fundamentals" HorizontalAlignment="Left" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="6" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="400"/>

                    <TextBlock HorizontalAlignment="Center" Grid.Row="7" TextWrapping="Wrap" Text="" VerticalAlignment="Center" />
                    <TextBlock VerticalAlignment="Center" Grid.Row="8" Grid.Column="0" HorizontalAlignment="Left" Text="Date" Height="21" Margin="0,0,0,0" Width="270"/>
                    <CalendarDatePicker x:Name="date" HorizontalAlignment="Left" Grid.Row="9" Grid.Column="0"  Grid.ColumnSpan="6" VerticalAlignment="Top" Height="32" Width="400"/>

                    <TextBlock HorizontalAlignment="Center" Grid.Row="10" Grid.Column="0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" />
                    <Button Content="Generate PDF" Padding="20,10,20,10" Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Click="GeneratePdf_Click"/>

                </Grid>
            </common:DemoLayout.Example>
        </common:DemoLayout>
    </StackPanel>
</Page>
