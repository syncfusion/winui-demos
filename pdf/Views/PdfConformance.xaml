<Page
    x:Class="Syncfusion.PdfDemos.WinUI.PdfConformance"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:Syncfusion.DemosCommon.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    mc:Ignorable="d">
    <StackPanel>

        <common:DemoLayout 
                HeaderText="This demo shows how to create PDF document with different types of PDF/A conformance."
                CSharpSource="{common:ConditionalXAML Individual=Syncfusion.PdfDemos.WinUI/Views/Resources/SourceFiles/PdfConformance_xaml_cs.txt,
                                                                 Common=Pdf/Views/Resources/SourceFiles/PdfConformance_xaml_cs.txt}">
            <common:DemoLayout.Example>
                <Grid x:Name="grdMain" Margin="10,10,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="165"></ColumnDefinition>
                        <ColumnDefinition Width="250"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>

                    </Grid.ColumnDefinitions>

                    <TextBlock VerticalAlignment="Center" Padding="0,0,0,0" HorizontalAlignment="Left"  Grid.Row="0" Grid.ColumnSpan="3" Text="Please select the conformance:" />

                    <ComboBox Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Center" Name="PdfConformanceOption" Height="32" Width="110" Margin="200,0,0,0">
                        <ComboBoxItem Content="PDF/A-1a"></ComboBoxItem>
                        <ComboBoxItem Content="PDF/A-1b"></ComboBoxItem>
                        <ComboBoxItem Content="PDF/A-2a"></ComboBoxItem>
                        <ComboBoxItem Content="PDF/A-2b"></ComboBoxItem>
                        <ComboBoxItem Content="PDF/A-2u"></ComboBoxItem>
                        <ComboBoxItem Content="PDF/A-3a"></ComboBoxItem>
                        <ComboBoxItem Content="PDF/A-3b" IsSelected="True"></ComboBoxItem>
                        <ComboBoxItem Content="PDF/A-3u"></ComboBoxItem>
                        <ComboBoxItem Content="PDF/A-4"></ComboBoxItem>
                        <ComboBoxItem Content="PDF/A-4e"></ComboBoxItem>
                        <ComboBoxItem Content="PDF/A-4f"></ComboBoxItem>
                    </ComboBox>
                    <TextBlock HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Height="21" Width="0" />
                    <TextBlock TextWrapping="Wrap" Padding="0,0,0,0" Grid.Row="2" Grid.ColumnSpan="3" >
                        <TextBlock.Text>
                            Please click the Generate PDF button to save and view the PDF document generated by Syncfusion PDF library.
                        </TextBlock.Text>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center" Grid.Row="3" Grid.Column="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Height="21" Width="0" />
                    <Button Content="Generate PDF" Padding="20,10,20,10" HorizontalAlignment="Left"  Grid.Row="6" VerticalAlignment="Top" Click="GeneratePDF_Click" />
                </Grid>
            </common:DemoLayout.Example>
        </common:DemoLayout>
    </StackPanel>
</Page>
