<Page
    x:Class="Syncfusion.PdfDemos.WinUI.ExtractText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:Syncfusion.DemosCommon.WinUI" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DataContext="{d:DesignInstance Type=common:MainViewModel}"
    Background="Transparent"
    mc:Ignorable="d">
    <StackPanel>
        <common:DemoLayout 
                HeaderText="This demo shows how to extract text from an existing PDF document. It also supports extracting the text with font name, size, and style."
                CSharpSource="{common:ConditionalXAML Individual=Syncfusion.PdfDemos.WinUI/Assets/Pdf/ExtractText_xaml_cs.txt,
                                                                 Common=Pdf/Assets/Pdf/ExtractText_xaml_cs.txt}">
            <common:DemoLayout.Example>

                <Grid x:Name="grdMain" Margin="10,10,10,10">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock TextWrapping="Wrap" Padding="0,0,0,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="8" >
                        <TextBlock.Text>
                            Please click the Extract Text button to view the extracted text.
                        </TextBlock.Text>
                    </TextBlock>

                    <TextBlock HorizontalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="8" TextWrapping="Wrap" Text="" VerticalAlignment="Center" />

                    <Button Content="View Template" Padding="20,10,20,10" HorizontalAlignment="Left"  Grid.Row="3" Grid.ColumnSpan="6" VerticalAlignment="Top" Click="button1_Click"/>
                    <Button Content="Extract Text" x:Name="btn" Padding="20,10,20,10" Grid.Row="3"  Grid.ColumnSpan="6" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="158,0,0,0" Click="Button2_Click"/>

                </Grid>
            </common:DemoLayout.Example>
        </common:DemoLayout>
    </StackPanel>
</Page>
